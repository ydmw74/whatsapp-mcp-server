{
  "name": "whatsapp-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for WhatsApp integration via Baileys - read and send WhatsApp messages from Claude and other LLM clients",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "whatsapp-mcp-server": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:http": "WHATSAPP_MCP_TRANSPORT=http node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    ".env.example"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "whatsapp",
    "baileys",
    "claude",
    "llm",
    "model-context-protocol",
    "ai-tools"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ydmw74/whatsapp-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@whiskeysockets/baileys": "^6.7.21",
    "pino": "^10.3.1",
    "qrcode-terminal": "^0.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
